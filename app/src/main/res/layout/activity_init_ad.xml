<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hw.klt.ktlActivity.home.InitADActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ad"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />



    <com.hw.klt.widget.CountDownView
    android:id="@+id/cd_skip"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    app:cd_text="跳过 3"
    app:cd_auto_check="false"
    app:cd_bg_color="#aaFF4081"
    app:cd_border_color="#aaFF4081"
    app:cd_shape="arc"
    app:cd_text_color="@android:color/white"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintVertical_bias="0.076"
    app:layout_constraintHorizontal_bias="0.93"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"/>


</android.support.constraint.ConstraintLayout>
